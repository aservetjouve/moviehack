  </video>
</section>

{{!-- Trending Section --}}
<h3 style="color: white; margin-top: 50px; margin-left: 50px; width:50%">Trending</h3>
<div class="container">
  {{#each trendingWeek.results}}
    {{#if this.title}}
      <a href="/info/{{this.media_type}}/{{this.id}}">
      <img src="https://image.tmdb.org/t/p/original/{{this.poster_path}}"
      data-src="https://image.tmdb.org/t/p/w220_and_h330_face/{{this.poster_path}}" data-srcset="https://image.tmdb.org/t/p/w220_and_h330_face/{{this.poster_path}} 1x, https://image.tmdb.org/t/p/w440_and_h660_face/{{this.poster_path}} 2x" srcset="https://image.tmdb.org/t/p/w220_and_h330_face/{{this.poster_path}} 1x, https://image.tmdb.org/t/p/w440_and_h660_face/{{this.poster_path}} 2x" data-loaded="true" class="poster" onerror="this.parentNode.removeChild(this)">
    </a>
    {{/if}}
  {{/each}}
</div>


